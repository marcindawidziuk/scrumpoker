  <body data-theme="light" class="bg-background"  style="font-family: 'Roboto', sans-serif;">
    <header>
      <section class="mx-auto">
      <div class="w-full container mx-auto p-6">
          <div class="w-full flex items-center justify-between">
          <a href="/" class="flex items-center text-indigo-400 no-underline hover:no-underline font-bold text-lg lg:text-2xl">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" class="h-6 fill-current text-indigo-600 pr-2"><path d="M10 20a10 10 0 1 1 0-20 10 10 0 0 1 0 20zm-5.6-4.29a9.95 9.95 0 0 1 11.2 0 8 8 0 1 0-11.2 0zm6.12-7.64l3.02-3.02 1.41 1.41-3.02 3.02a2 2 0 1 1-1.41-1.41z"></path></svg> SCRUM POKER
                  </a> <div class="flex justify-end content-center">
            <a href="https://github.com/cinekdawidziuk/scrumpoker" class="mr-5" target="_blank"><i class="fab fa-github fa-2x text-accent"></i></a>
              <button id="theme-button" class="fas fa-2x flex w-10 bg-transparent font-semibold text-accent" 
                  title="Change theme"
                  onclick="toggleTheme()"></button>
                  </div></div></div>
    </section>
    </header>
    <main role="main" class="container mx-auto">
      <p class="alert alert-info" role="alert"><%= get_flash(@conn, :info) %></p>
      <p class="alert alert-danger" role="alert"><%= get_flash(@conn, :error) %></p>
      <%= render @view_module, @view_template, assigns %>
    </main>
    <script type="text/javascript" src="<%= Routes.static_path(@conn, "/js/app.js") %>"></script>
    <script>
    
    const theme = localStorage.getItem('theme');
    var isDarkThemeDefault = false;
    if (window.matchMedia && window.matchMedia('(prefers-color-scheme: dark)').matches) {
      isDarkThemeDefault = true;
    }
    const article = document.body;
    article.dataset.theme = theme;
    let button = document.getElementById("theme-button");
    if (theme === "dark" || (theme !== "light" && isDarkThemeDefault)){
     button.classList.remove("fa-moon");
     button.classList.add("fa-lightbulb");
      button.value = "Light Theme";
    }else{
     button.classList.remove("fa-lightbulb");
     button.classList.add("fa-moon");
      button.value = "Dark Theme";
    }
    
function toggleTheme(){
    const currentTheme = localStorage.getItem('theme');
    if (currentTheme === "dark" || (currentTheme !== "light" && isDarkThemeDefault)){
        localStorage.setItem('theme', 'light');
    }else{
        localStorage.setItem('theme', 'dark');
    }
    const theme = localStorage.getItem('theme');
    console.log("theme" + theme);
    const article = document.body;
    let button = document.getElementById("theme-button");
    
    if (theme === "dark" || (theme !== "light" && isDarkThemeDefault)){
      button.classList.remove("fa-moon");
      button.classList.add("fa-lightbulb");
      button.value = "Light Theme";
    }else{
      button.classList.add("fa-moon");
      button.classList.remove("fa-lightbulb");
      button.value = "Dark Theme";
    }
    article.dataset.theme = theme;
    
    document.body.classList.add("transition");
    document.body.classList.add("duration-500");
    document.body.classList.add("ease-in-out");
}
</script>
